{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "alwaysStrict": true,
    "moduleResolution": "Bundler",
    "noEmit": true,
    "baseUrl": "."
  },
  "include": ["./src/**/*"]
}
